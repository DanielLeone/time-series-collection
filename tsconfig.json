{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "importHelpers": true,
        "alwaysStrict": true,
        "sourceMap": true,
        "declaration": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "noImplicitAny": false,
        "noImplicitThis": true,
        "strictNullChecks": false,
        "rootDir": ".",
        "outDir": "./build/",
        "removeComments": true
    },
    "include": [
        "src/**/*",
        "__tests__/**/*"
    ]
}